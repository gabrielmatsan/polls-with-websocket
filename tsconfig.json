{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Modules */
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Emit */
    "noEmit": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}